<% content_for :title do %>
  Learn <%= @subject.name %>
<% end %>

<h1>Learn <%= @subject.name %></h1>

<h2>Quizzes</h2>

<div class='hero-masonry span12'>

  <% @topics.each do |topic| %>
    <div class="hero-item topic">
      <h3><%= topic.name %></h3>
      <% topic.quizzes.sort_by(&:created_at).each do |quiz| %>

        <div class="quiz-wrapper">

          <%= content_tag "span", class: "quiz", data: {quiz_id: quiz.id} do %>
            <%= link_to quiz.body, subject_topic_quiz_path(subject_id: @subject.slug, :topic_id => topic.slug, :id => quiz.slug) %>
          <% end %>

          <br />

          <div class="description">
            <%= quiz.description %>
          </div>

        </div>

      <% end %>
    </div>
  <% end %>

</div>

